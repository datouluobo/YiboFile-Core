<Window x:Class="YiboFile.Windows.ThemeColorEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:YiboFile.Controls"
        Title="自定义主题颜色" 
        Width="850" Height="680"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundPrimaryBrush}">
    
    <Window.Resources>
        <!-- 颜色项样式 -->
        <Style x:Key="ColorItemStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 头部 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="自定义主题颜色" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource ForegroundPrimaryBrush}"/>
            <TextBlock Text="编辑主题的各种颜色，实时预览效果" 
                       FontSize="12"
                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                       Margin="0,4,0,0"/>
            
            <!-- 主题名称输入 -->
            <Grid Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="主题名称: " VerticalAlignment="Center"
                           Foreground="{DynamicResource ForegroundPrimaryBrush}"
                           Margin="0,0,8,0"/>
                <TextBox x:Name="ThemeNameTextBox" Grid.Column="1"
                         Text="我的自定义主题"
                         FontSize="14"
                         Padding="8,6"/>
            </Grid>
        </StackPanel>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：颜色列表 -->
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource BorderDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="8"
                    Margin="0,0,8,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="ColorListPanel">
                        <!-- 颜色项将在代码中动态生成 -->
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 右侧：颜色选择器 + 预览 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 颜色选择器 -->
                <Border Grid.Row="0"
                        BorderBrush="{DynamicResource BorderDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="0"
                        Margin="0,0,0,8">
                    <controls:ColorPickerControl x:Name="ColorPicker"
                                                 Margin="0"/>
                </Border>

                <!-- 实时预览 -->
                <Border Grid.Row="1"
                        BorderBrush="{DynamicResource BorderDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="实时预览" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundPrimaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- 预览内容 -->
                        <Border x:Name="PreviewContainer"
                                Background="{DynamicResource BackgroundSecondaryBrush}"
                                BorderBrush="{DynamicResource BorderDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16"
                                MinHeight="200">
                            <StackPanel>
                                <TextBlock Text="这是主要文本" 
                                           Foreground="{DynamicResource ForegroundPrimaryBrush}"
                                           FontSize="14"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="这是次要文本" 
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,0,0,8"/>
                                <Button Content="强调色按钮"
                                        Background="{DynamicResource AccentDefaultBrush}"
                                        Foreground="{DynamicResource ForegroundOnAccentBrush}"
                                        Padding="12,6"
                                        Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Grid.Column="1"
                    Content="保存"
                    Click="SaveButton_Click"
                    Padding="24,8"
                    Margin="0,0,8,0"
                    Background="{DynamicResource AccentDefaultBrush}"
                    Foreground="{DynamicResource ForegroundOnAccentBrush}"/>
            
            <Button x:Name="CancelButton"
                    Grid.Column="2"
                    Content="取消"
                    Click="CancelButton_Click"
                    Padding="24,8"/>
        </Grid>
    </Grid>
</Window>

