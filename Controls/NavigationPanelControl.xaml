<UserControl x:Class="YiboFile.Controls.NavigationPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:YiboFile.Helpers"
             xmlns:local="clr-namespace:YiboFile.Controls"
             xmlns:converters="clr-namespace:YiboFile.Controls.Converters"
             Background="{DynamicResource NavigationRegionBrush}">
    <UserControl.Resources>
        <helpers:ResourceKeyConverter x:Key="ResourceKeyConverter"/>
        <converters:WidthToVisibilityConverter x:Key="WidthToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Name="NavContentGrid" Grid.Row="0">
            <!-- è·¯å¾„é¢æ¿ -->
            <Grid Name="NavPathContent" Margin="8">
                <!-- åŸºç¡€å±‚ï¼šè·¯å¾„å¯æ»šåŠ¨å†…å®¹ -->
                <Grid Margin="0,8,0,0">
                <Grid.Resources>
                    <!-- é€’å½’æ•°æ®æ¨¡æ¿ -->
                    <HierarchicalDataTemplate x:Key="FolderTemplate" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal" Margin="2,4">
                            <TextBlock Text="{Binding IconKey, Converter={StaticResource ResourceKeyConverter}}" 
                                       FontFamily="{DynamicResource IconFontFamily}" 
                                       Margin="0,0,6,0" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="{Binding Header}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>

                    <!-- é©±åŠ¨å™¨æ ¹èŠ‚ç‚¹æ¨¡æ¿ -->
                    <HierarchicalDataTemplate x:Key="DriveTemplate" ItemsSource="{Binding Children}">
                        <Grid Margin="0,2,0,2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding IconKey, Converter={StaticResource ResourceKeyConverter}}" 
                                           FontFamily="{DynamicResource IconFontFamily}" 
                                           Margin="0,0,8,0" 
                                           VerticalAlignment="Center"
                                           FontSize="18"/>
                                           
                                <DockPanel x:Name="DriveInfoPanel" Grid.Column="1" VerticalAlignment="Center" LastChildFill="True">
                                    <!-- å®¹é‡ä¿¡æ¯ (å¿…é¡»å®Œæ•´æ˜¾ç¤ºï¼Œä¼˜å…ˆå›ºå®šåœ¨å³ä¾§) -->
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="8,0,0,0">
                                        <TextBlock Text="{Binding UsedSizeText}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Bold"/>
                                        <TextBlock Text=" / " FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding TotalSizeText}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Bold"/>
                                    </StackPanel>
                                    <!-- ç›˜ç¬¦ + åˆ«å (åˆ«ååœ¨ç©ºé—´ä¸è¶³æ—¶å®Œå…¨éšè—) -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DriveLetter}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DriveLabel}" FontWeight="SemiBold" Margin="4,0,0,0" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Visibility="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=DockPanel}, Converter={StaticResource WidthToVisibilityConverter}, ConverterParameter=200}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Grid>

                            <!-- è¿›åº¦æ¡ -->
                            <ProgressBar Grid.Row="1" 
                                         Minimum="0" Maximum="1.0" 
                                         Value="{Binding UsagePercentage}" 
                                         Height="4" 
                                         Margin="0,4,0,0"
                                         BorderThickness="0"
                                         Background="{DynamicResource ControlSampleBackgroundBrush}">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Setter Property="Foreground" Value="#2196F3"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UsagePercentage}" Value="0.9">
                                                <!-- Warning Red for > 90% logic handled via validation converter usually, simplified here -->
                                                <Setter Property="Foreground" Value="#F44336"/> 
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                        </Grid>
                    </HierarchicalDataTemplate>
                    
                    <!-- æ¨¡æ¿é€‰æ‹©å™¨ -->
                    <local:NavigationItemTemplateSelector x:Key="NavigationItemTemplateSelector"
                                                        DriveTemplate="{StaticResource DriveTemplate}"
                                                        FolderTemplate="{StaticResource FolderTemplate}"/>

                    <!-- è¦†ç›–å¼ ScrollViewer æ ·å¼ -->
                    <Style x:Key="OverlayScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                    <Grid>
                                        <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" 
                                                                CanContentScroll="{TemplateBinding CanContentScroll}"/>
                                        <ScrollBar x:Name="PART_VerticalScrollBar" 
                                                   HorizontalAlignment="Right" 
                                                   Maximum="{TemplateBinding ScrollableHeight}" 
                                                   Orientation="Vertical" 
                                                   Style="{DynamicResource ModernScrollBarStyle}"
                                                   ViewportSize="{TemplateBinding ViewportHeight}" 
                                                   Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="ModernScrollBarStyle" TargetType="{x:Type ScrollBar}">
                        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
                        <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Width" Value="6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid x:Name="Bg" SnapsToDevicePixels="true">
                                        <Track x:Name="PART_Track" IsDirectionReversed="true">
                                            <Track.Thumb>
                                                <Thumb Style="{DynamicResource ScrollThumbStyle}"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="Height" Value="6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="ScrollThumbStyle" TargetType="{x:Type Thumb}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Thumb}">
                                    <Border x:Name="thumbBorder" Background="{DynamicResource AccentBrush}" CornerRadius="3" Opacity="0.4" Width="4"/>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="thumbBorder" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="thumbBorder" Property="Opacity" Value="0.8"/>
                                            <Setter TargetName="thumbBorder" Property="Width" Value="8"/>
                                        </Trigger>
                                        <Trigger Property="IsDragging" Value="True">
                                            <Setter TargetName="thumbBorder" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="thumbBorder" Property="Opacity" Value="1.0"/>
                                            <Setter TargetName="thumbBorder" Property="Width" Value="8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <!-- TreeViewItem æ ·å¼ï¼šè‡ªå®šä¹‰å±•å¼€æŒ‰é’® -->
                     <Style x:Key="DriveTreeViewItemStyle" TargetType="TreeViewItem">
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DrivesTreeViewItem_PreviewMouseLeftButtonDown"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                        <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                        <Setter Property="Padding" Value="1,0,0,0"/>
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition MinWidth="19" Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- å±•å¼€æŒ‰é’® (Chevron) -->
                                        <ToggleButton x:Name="Expander" 
                                                      ClickMode="Press" 
                                                      IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Focusable" Value="False"/>
                                                    <Setter Property="Width" Value="20"/>
                                                    <Setter Property="Height" Value="20"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="Transparent" Padding="2">
                                                                    <Path x:Name="Arrow" 
                                                                          Data="M 6,3 L 12,9 L 6,15" 
                                                                          Stroke="{DynamicResource TextSecondaryBrush}" 
                                                                          StrokeThickness="1.5"
                                                                          HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          RenderTransformOrigin="0.5,0.5">
                                                                        <Path.RenderTransform>
                                                                            <RotateTransform Angle="0"/>
                                                                        </Path.RenderTransform>
                                                                    </Path>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="Arrow" Property="RenderTransform">
                                                                            <Setter.Value>
                                                                                <RotateTransform Angle="90"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Setter TargetName="Arrow" Property="Stroke" Value="{DynamicResource AccentBrush}"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="Arrow" Property="Stroke" Value="{DynamicResource TextPrimaryBrush}"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ToggleButton.Style>
                                        </ToggleButton>
                                        
                                        <!-- å†…å®¹åŒºåŸŸ Border for Selection -->
                                        <Border x:Name="Bd" 
                                                Grid.Column="1" 
                                                Grid.ColumnSpan="2"
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}" 
                                                SnapsToDevicePixels="true">
                                            <ContentPresenter x:Name="PART_Header" 
                                                            ContentSource="Header" 
                                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Border>
                                        
                                        <!-- å­é¡¹ç›® -->
                                        <ItemsPresenter x:Name="ItemsHost" 
                                                      Grid.Column="1" 
                                                      Grid.ColumnSpan="2" 
                                                      Grid.Row="1"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsExpanded" Value="false">
                                            <Setter Property="Visibility" TargetName="ItemsHost" Value="Collapsed"/>
                                        </Trigger>
                                        <Trigger Property="HasItems" Value="false">
                                            <Setter Property="Visibility" TargetName="Expander" Value="Hidden"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="true">
                                            <Setter Property="Background" TargetName="Bd" Value="{DynamicResource SelectionBackgroundBrush}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" TargetName="Bd" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="false">
                                            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                
                <!-- ä½¿ç”¨è¦†ç›–å¼ ScrollViewer åŒ…è£¹æ•´ä¸ªè·¯å¾„å¯¼èˆªåŒºåŸŸ -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource OverlayScrollViewerStyle}">
                    <StackPanel Name="NavSectionsPanel">
                        <!-- é©±åŠ¨å™¨åˆ—è¡¨ (æ•´ä½“ä¸Šç§»ä»¥å¯¹é½ç®¡ç†æŒ‰é’®, å†…éƒ¨å¯¹é½ä¿æŒé»˜è®¤) -->
                        <Expander Name="DrivesExpander" Margin="0,-8,0,4" IsExpanded="True" FocusVisualStyle="{x:Null}">
                             <Expander.Header>
                                 <Grid Height="32">
                                     <TextBlock Text="é©±åŠ¨å™¨" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
                                 </Grid>
                             </Expander.Header>
                            <TreeView Name="DrivesTreeView" 
                                      Margin="2"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      HorizontalContentAlignment="Stretch"
                                      ItemTemplateSelector="{StaticResource NavigationItemTemplateSelector}"
                                      ItemContainerStyle="{StaticResource DriveTreeViewItemStyle}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            </TreeView>
                        </Expander>
        
                        <!-- å¿«é€Ÿè®¿é—® -->
                        <Expander Name="QuickAccessExpander" Margin="0,-8,0,4" IsExpanded="True" FocusVisualStyle="{x:Null}">
                             <Expander.Header>
                                 <Grid Height="32">
                                     <TextBlock Text="å¿«é€Ÿè®¿é—®" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
                                 </Grid>
                             </Expander.Header>
                            <ListBox Name="QuickAccessListBox" 
                                     Margin="2,0,2,2"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     SelectionMode="Single"
                                     ItemContainerStyle="{StaticResource NavListBoxItemStyle}"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding IconKey, Converter={StaticResource ResourceKeyConverter}}" 
                                                       FontFamily="{DynamicResource IconFontFamily}" 
                                                       Margin="0,0,8,0" 
                                                       VerticalAlignment="Center"
                                                       FontSize="16"/>
                                            <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>
                        
                        <!-- æ”¶è—åˆ†ç»„ (åŠ¨æ€ ItemControl) -->
                        <ItemsControl Name="FavoritesGroupsItemsControl" Margin="0,0,0,8" ItemsSource="{Binding Favorites.FavoriteGroups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander IsExpanded="True" Margin="0,-2,0,4" FocusVisualStyle="{x:Null}">
                                        <Expander.Header>
                                            <Grid Height="32" Margin="0,-6,0,0">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Expander.Header>
                                        <Expander.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="é‡å‘½ååˆ†ç»„" Tag="{Binding}" Click="RenameFavoriteGroup_Click"/>
                                                <MenuItem Header="åˆ é™¤åˆ†ç»„" Tag="{Binding}" Click="DeleteFavoriteGroup_Click"/>
                                            </ContextMenu>
                                        </Expander.ContextMenu>
                                        <ListBox ItemsSource="{Binding Items}" 
                                                 Margin="2,0,2,2"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 SelectionMode="Single"
                                                 ItemContainerStyle="{StaticResource NavListBoxItemStyle}"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                 Loaded="FavoriteListBox_Loaded">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding IconKey, Converter={StaticResource ResourceKeyConverter}}" 
                                                                   FontFamily="{DynamicResource IconFontFamily}" 
                                                                   Margin="0,0,8,0" 
                                                                   VerticalAlignment="Center"
                                                                   FontSize="16"/>
                                                        <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
                </Grid>
 
                <!-- å¯¹é½é¦–è¡Œçš„ç®¡ç†æŒ‰é’® (Overlay æ¨¡å¼ï¼ŒMarginç”¨äºŽåŒ¹é… 32px Header) -->
                <Button x:Name="PathManageBtn" 
                        Content="{DynamicResource Icon_Settings}" 
                        FontFamily="{DynamicResource IconFontFamily}"
                        Style="{StaticResource ModernButtonStyle}" 
                        Width="24" Height="24" Padding="0" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,4,-5,0"
                        ToolTip="å¯¼èˆªè®¾ç½®"
                        Background="Transparent"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        WindowChrome.IsHitTestVisibleInChrome="True"/>
            </Grid>
            
            <!-- åº“å¯¼èˆªå†…å®¹ -->
            <Grid Name="NavLibraryContent" Margin="8" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- åº“ Header -->
                <Grid Grid.Row="0" Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="åº“" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1" Name="LibraryManageBtn"
                            Content="{DynamicResource Icon_Settings}"
                            FontFamily="{DynamicResource IconFontFamily}"
                            Width="24" Height="24"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="Transparent"
                            ToolTip="ç®¡ç†åº“"
                            Margin="0,0,-5,0"
                            Padding="0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            WindowChrome.IsHitTestVisibleInChrome="True"/>
                </Grid>
                
                <Grid Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox Name="LibrariesListBox" 
                             Margin="2"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectionMode="Single"
                             ItemsSource="{Binding Library.Libraries}"
                             SelectedItem="{Binding Library.SelectedLibrary}"
                             DisplayMemberPath="Name"
                             AllowDrop="True"
                             ItemContainerStyle="{StaticResource NavListBoxItemStyle}">
                        <ListBox.ContextMenu>
                            <ContextMenu Name="LibraryContextMenu">
                                <MenuItem x:Name="AddFileToLibraryMenuItem" Header="ðŸ“‚ æ·»åŠ åˆ°åº“"/>
                                <MenuItem x:Name="LibraryRefreshItem" Header="åˆ·æ–°" Icon="ðŸ”„"/>
                                <MenuItem x:Name="LibraryOpenInExplorerItem" Header="åœ¨èµ„æºç®¡ç†å™¨ä¸­æ‰“å¼€" Icon="ðŸ“‚"/>
                                <Separator/>
                                <MenuItem x:Name="LibraryRenameItem" Header="é‡å‘½å"/>
                                <MenuItem x:Name="LibraryDeleteItem" Header="åˆ é™¤"/>
                                <Separator/>
                                <MenuItem x:Name="LibraryManageItem" Header="åº“ç®¡ç†"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </ScrollViewer>
            </Grid>
            </Grid>

            <!-- æ ‡ç­¾å¯¼èˆªå†…å®¹ -->
            <Grid Name="NavTagContent" Margin="8" Visibility="Collapsed">
                 <local:TagBrowsePanel x:Name="TagBrowsePanelElement"/>
            </Grid>
            
        </Grid>
        
        <!-- åº•éƒ¨æŒ‰é’®åŒº (å·²ç§»é™¤åº“ç®¡ç†æŒ‰é’®) -->
        <Border Grid.Row="1" Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource BorderDefaultBrush}" BorderThickness="0">
             <Grid>
                 <!-- ä¿ç•™ Grid ç»“æž„ä»¥é˜²æœªæ¥æ‰©å±•ï¼Œä½†å†…å®¹ä¸ºç©º -->
             </Grid>
        </Border>
    </Grid>
</UserControl>
























