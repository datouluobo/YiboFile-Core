<UserControl x:Class="YiboFile.Controls.TagBrowsePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:YiboFile.Controls.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToThicknessConverter x:Key="NullToThicknessConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/> <!-- Footer for inline management -->
        </Grid.RowDefinitions>

        <!-- Header / Management actions -->
        <Grid Grid.Row="0" Height="32" Margin="0,0,0,8" Visibility="{Binding ShowHeader, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="BackBtn" Content="←" ToolTip="返回" 
                    Width="24" Height="24" Click="BackBtn_Click"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="Transparent" Margin="-5,0,5,0"
                    Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            
            <TextBlock Grid.Column="1" Text="标签" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
            
            <Button Grid.Column="2" x:Name="ManageTagsBtn" 
                    Content="{DynamicResource Icon_Settings}" 
                    FontFamily="{DynamicResource IconFontFamily}"
                    ToolTip="管理标签" 
                    Width="24" Height="24" Click="ManageTagsBtn_Click"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="Transparent" Margin="0,0,-5,0"
                    Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                    WindowChrome.IsHitTestVisibleInChrome="True"/>
        </Grid>

        <!-- Tags List - Simplified version without complex styles -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TagGroupsControl" 
                          ItemsSource="{Binding TagGroups, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander IsExpanded="True" BorderThickness="0" Background="Transparent">
                            <Expander.Header>
                                <Border AllowDrop="True" Drop="GroupHeader_Drop" Background="Transparent" Padding="0,4">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Border>
                            </Expander.Header>
                            <ItemsControl ItemsSource="{Binding Tags}" Margin="4,4,0,8">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding ColorBrush}" 
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="{Binding Color, Converter={StaticResource NullToThicknessConverter}}"
                                                CornerRadius="4" 
                                                Padding="8,4" 
                                                Margin="0,0,6,6"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="TagItem_MouseLeftButtonDown"
                                                AllowDrop="True" Drop="TagItem_Drop" PreviewMouseMove="TagItem_PreviewMouseMove">
                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="修改颜色" Click="ChangeTagColor_Click"/>
                                                    <MenuItem Header="重命名" Click="RenameTag_Click"/>
                                                    <MenuItem Header="删除" Click="DeleteTag_Click"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="#282828" 
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Empty State -->
        <TextBlock x:Name="EmptyStateText" Grid.Row="1" 
                   Text="暂无标签" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
                   Foreground="{DynamicResource TextDisabledBrush}"
                   Visibility="Collapsed"/>

        <!-- Inline Management Footer (Visible when ShowHeader is False, or controlled by prop) -->
        <Grid Grid.Row="2" Margin="0,8,0,0" Visibility="{Binding ShowFooter, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="新建分组" Click="NewGroupBtn_Click"/>
            <Button Grid.Column="2" Content="新建标签" Click="NewTagBtn_Click"/>
        </Grid>
    </Grid>
</UserControl>
