<UserControl x:Class="YiboFile.Controls.TextEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonedit="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/>    <!-- Editor -->
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundTertiaryBrush}" Padding="5">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SaveButton" Content="保存" 
                        Width="60" Margin="5,0"/>
                <Button x:Name="UndoButton" Content="撤销" 
                        Width="60" Margin="5,0"/>
                <Button x:Name="RedoButton" Content="重做" 
                        Width="60" Margin="5,0"/>
                <TextBlock Text="语法:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                <ComboBox x:Name="SyntaxComboBox" Width="120" Margin="5,0"/>
            </StackPanel>
        </Border>
        
        <!-- AvalonEdit Editor -->
        <avalonedit:TextEditor x:Name="TextEditor" Grid.Row="1"
                               FontFamily="Consolas"
                               FontSize="14"
                               ShowLineNumbers="True"
                               WordWrap="False"/>
    </Grid>
</UserControl>

