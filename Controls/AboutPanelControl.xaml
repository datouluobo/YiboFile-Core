<UserControl x:Class="YiboFile.Controls.AboutPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             MinWidth="600" MinHeight="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundSecondaryBrush}" BorderBrush="{DynamicResource BorderDefaultBrush}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="12,12">
                    <TextBlock Text="关于" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                </Border>

                <!-- 导航列表 -->
                <StackPanel Grid.Row="1" Margin="0,10">
                    <RadioButton x:Name="TabInfo" Content="软件信息" GroupName="AboutTabs" IsChecked="True"
                                 Style="{DynamicResource SettingsTabButtonStyle}" Click="Tab_Click"/>
                    <RadioButton x:Name="TabShortcuts" Content="快捷操作" GroupName="AboutTabs"
                                 Style="{DynamicResource SettingsTabButtonStyle}" Click="Tab_Click"/>
                    <RadioButton x:Name="TabLicense" Content="开源许可" GroupName="AboutTabs"
                                 Style="{DynamicResource SettingsTabButtonStyle}" Click="Tab_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 分割线 -->
        <Border Grid.Column="1" Background="{DynamicResource DividerBrush}"/>

        <!-- 右侧内容区 -->
        <Border Grid.Column="2" Background="{DynamicResource AppBackgroundBrush}">
            <Grid>
                <!-- 内容页 1：软件信息 -->
                <ScrollViewer x:Name="ContentInfo" Visibility="Visible" Padding="40">
                    <StackPanel>
                        <!-- Logo -->
                        <Image Source="/Resources/logo.png" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        
                        <!-- 标题 -->
                        <TextBlock Text="YiboFile" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="现代文件资源管理器" FontSize="16" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,30"/>

                        <!-- 版本 -->
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="版本信息" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="版本号" Grid.Column="0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="1.7.8.10" Grid.Column="1" FontWeight="Medium"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="构建日期" Grid.Column="0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="2026-01-04" Grid.Column="1"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="开发者" Grid.Column="0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="YiboSoft" Grid.Column="1"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Copyright © 2024-2026 YiboSoft. All rights reserved." 
                                   HorizontalAlignment="Center" 
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   FontSize="12" Margin="0,40,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- 内容页 2：快捷操作 -->
                <ScrollViewer x:Name="ContentShortcuts" Visibility="Collapsed" Padding="30">
                    <StackPanel>
                        <TextBlock Text="鼠标与键盘快捷操作" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                        
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <StackPanel>
                                <!-- 表头 -->
                                <Grid Background="{DynamicResource BackgroundSecondaryBrush}" Height="40">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="功能" FontWeight="SemiBold" VerticalAlignment="Center" Margin="15,0"/>
                                    <TextBlock Text="操作方式" Grid.Column="1" FontWeight="SemiBold" VerticalAlignment="Center" Margin="15,0"/>
                                </Grid>
                                <Border Height="1" Background="{DynamicResource DividerBrush}"/>
                                
                                <!-- 列表项 -->
                                <ItemsControl x:Name="ShortcutsList" Focusable="False">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="0">
                                                <StackPanel>
                                                    <Grid Height="40">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Action}" VerticalAlignment="Center" Margin="15,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                        <Border Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0">
                                                            <TextBlock Text="{Binding Keys}" FontFamily="Consolas, Courier New" Background="{DynamicResource SurfaceBrush}" Padding="6,2" Foreground="{DynamicResource AccentDefaultBrush}"/>
                                                        </Border>
                                                    </Grid>
                                                    <Border Height="1" Background="{DynamicResource DividerBrush}" Opacity="0.5"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- 内容页 3：开源许可 -->
                <ScrollViewer x:Name="ContentLicense" Visibility="Collapsed" Padding="30">
                    <StackPanel>
                        <TextBlock Text="开源许可与致谢" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="本项目使用了以下开源库：" Margin="0,0,0,20" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        
                        <ItemsControl x:Name="LicensesList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Margin="0,0,10,10" Padding="15" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Width="360" VerticalAlignment="Top">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Description}" Margin="0,4,0,0" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding License}" Margin="0,4,0,0" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 关闭按钮 -->
        <Button x:Name="CloseButton" Content="✕" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="40" Height="40" Margin="0,10,10,0"
                Grid.Column="2"
                Background="Transparent" BorderThickness="0"
                FontSize="16" Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#20000000"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#40000000"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>

    <UserControl.Resources>
        <!-- 简单的导航按钮样式 -->
        <Style x:Key="SettingsTabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Indicator" Background="Transparent" Grid.Column="0"/>
                                <ContentPresenter Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentLightBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentDefaultBrush}"/>
                                <Setter TargetName="Indicator" Property="Background" Value="{DynamicResource AccentDefaultBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BackgroundTertiaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>

