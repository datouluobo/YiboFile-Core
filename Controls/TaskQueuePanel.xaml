<UserControl x:Class="YiboFile.Controls.TaskQueuePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YiboFile.Controls"
             xmlns:tq="clr-namespace:YiboFile.Services.FileOperations.TaskQueue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="360">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- çŠ¶æ€è½¬æ¢å™¨ -->
        <local:TaskStatusToColorConverter x:Key="StatusToColor"/>
        <local:TaskStatusToTextConverter x:Key="StatusToText"/>
        <local:PauseResumeTextConverter x:Key="PauseResumeTextConverter"/>
        
        <!-- çŽ°ä»£åŒ–åœ†è§’è¿›åº¦æ¡æ ·å¼ -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="{DynamicResource ControlDefaultBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" ClipToBounds="True">
                            <Grid>
                                <!-- Progress indicator using scale transform based on percentage -->
                                <Border x:Name="PART_Indicator" 
                                        Background="{TemplateBinding Foreground}" 
                                        CornerRadius="3"
                                        HorizontalAlignment="Left">
                                    <Border.Width>
                                        <MultiBinding Converter="{x:Static local:ProgressWidthConverter.Instance}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource TemplatedParent}"/>
                                        </MultiBinding>
                                    </Border.Width>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- å°åž‹æ“ä½œæŒ‰é’®æ ·å¼ -->
        <Style x:Key="TaskActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- å¤–å±‚å®¹å™¨å¸¦é˜´å½±å’Œåœ†è§’ -->
    <Border x:Name="MainBorder" Background="{DynamicResource CardBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderDefaultBrush}" 
            BorderThickness="1" 
            CornerRadius="8"
            MinWidth="320"
            VerticalAlignment="Top"
            MaxWidth="400">
        <Border.RenderTransform>
            <TranslateTransform x:Name="PanelTranslateTransform"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.2" Direction="270"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MaxHeight="300"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border x:Name="HeaderBorder" Grid.Row="0" Background="{DynamicResource ControlDefaultBackgroundBrush}" 
                    CornerRadius="8,8,0,0" Padding="12,10"
                    MouseLeftButtonDown="HeaderBorder_MouseLeftButtonDown"
                    MouseLeftButtonUp="HeaderBorder_MouseLeftButtonUp"
                    MouseMove="HeaderBorder_MouseMove">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- å›¾æ ‡ -->
                    <TextBlock Grid.Column="0" Text="ðŸ“‹" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    
                    <!-- æ ‡é¢˜ -->
                    <TextBlock Grid.Column="1" Text="ä»»åŠ¡é˜Ÿåˆ—" FontWeight="SemiBold" FontSize="13"
                               VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    
                    <!-- æ“ä½œæŒ‰é’® -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="æ¸…ç†" Click="ClearCompleted_Click" 
                                Style="{StaticResource TaskActionButtonStyle}" 
                                ToolTip="æ¸…ç†å·²å®Œæˆçš„ä»»åŠ¡"/>
                        <Button Content="å…¨æ¸…" Click="ForceRemoveAll_Click" 
                                Style="{StaticResource TaskActionButtonStyle}" 
                                ToolTip="å¼ºåˆ¶æ¸…é™¤æ‰€æœ‰ä»»åŠ¡ï¼ˆåŒ…æ‹¬è¿è¡Œä¸­ï¼‰"/>
                        <Button Content="âœ•" Click="Close_Click" 
                                Style="{StaticResource TaskActionButtonStyle}" 
                                FontSize="12" Padding="6,4"
                                ToolTip="å…³é—­é¢æ¿"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Task List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0">
                <ItemsControl x:Name="TasksList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type tq:FileOperationTask}">
                            <Border x:Name="taskBorder" Background="Transparent" 
                                    BorderBrush="{DynamicResource BorderSubtleBrush}" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="12,10">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="taskBorder"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#08000000" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Border.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="taskBorder"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="Transparent" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- æè¿°å’ŒçŠ¶æ€ -->
                                    <Grid Grid.Row="0" Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontWeight="Medium" FontSize="12"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <Border Grid.Column="1" CornerRadius="4" Padding="6,2"
                                                Background="{Binding Status, Converter={StaticResource StatusToColor}}"
                                                Opacity="0.15">
                                            <TextBlock Text="{Binding Status, Converter={StaticResource StatusToText}}" 
                                                       FontSize="10" FontWeight="Medium"
                                                       Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- è¿›åº¦æ¡ -->
                                    <ProgressBar Grid.Row="1" 
                                                 Value="{Binding Progress}" Maximum="100" 
                                                 Margin="0,0,0,6"
                                                 Style="{StaticResource ModernProgressBarStyle}"
                                                 Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                                    
                                    <!-- å½“å‰æ–‡ä»¶å’Œæ“ä½œæŒ‰é’® -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding CurrentFile}" 
                                                   FontSize="11" 
                                                   Foreground="{DynamicResource TextTertiaryBrush}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   VerticalAlignment="Center"/>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                                            <!-- Pause/Resume Button -->
                                            <Button Content="{Binding IsPaused, Converter={StaticResource PauseResumeTextConverter}}" 
                                                    Tag="{Binding}" Click="PauseResume_Click" 
                                                    Style="{StaticResource TaskActionButtonStyle}" 
                                                    Margin="0,0,4,0"/>
                                            
                                            <!-- Cancel Button -->
                                            <Button Content="å–æ¶ˆ" Tag="{Binding}" Click="CancelTask_Click" 
                                                    Style="{StaticResource TaskActionButtonStyle}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>

