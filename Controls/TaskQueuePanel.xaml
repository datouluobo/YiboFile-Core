<UserControl x:Class="YiboFile.Controls.TaskQueuePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YiboFile.Controls"
             xmlns:tq="clr-namespace:YiboFile.Services.FileOperations.TaskQueue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="320">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- 状态转换器 -->
        <local:TaskStatusToColorConverter x:Key="StatusToColor"/>
        <local:TaskStatusToTextConverter x:Key="StatusToText"/>
        <local:PauseResumeTextConverter x:Key="PauseResumeTextConverter"/>
        
        <!-- 现代化极简进度条 -->
        <Style x:Key="CompactProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="4"/>
            <Setter Property="Background" Value="{DynamicResource ControlDefaultBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2" ClipToBounds="True">
                            <Grid>
                                <Border x:Name="PART_Indicator" 
                                        Background="{TemplateBinding Foreground}" 
                                        CornerRadius="2"
                                        HorizontalAlignment="Left">
                                    <Border.Width>
                                        <MultiBinding Converter="{x:Static local:ProgressWidthConverter.Instance}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource TemplatedParent}"/>
                                        </MultiBinding>
                                    </Border.Width>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 极简按钮样式 -->
        <Style x:Key="IconButtonButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.IsVisibleChanged">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainBorder" 
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                    <DoubleAnimation Storyboard.TargetName="PanelTranslateTransform" 
                                     Storyboard.TargetProperty="Y"
                                     From="40" To="0" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    
    <!-- 面板容器：使用云端玻璃感（半透明） -->
    <Border x:Name="MainBorder" Background="{DynamicResource CardBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderDefaultBrush}" 
            BorderThickness="1" 
            CornerRadius="12"
            MinWidth="300"
            VerticalAlignment="Bottom"
            Margin="0,0,20,60"
            MaxWidth="340">
        <Border.RenderTransform>
            <TranslateTransform x:Name="PanelTranslateTransform"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="8" Opacity="0.15" Direction="270"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MaxHeight="320"/>
            </Grid.RowDefinitions>
            
            <!-- Header: 更加轻量化 -->
            <Border x:Name="HeaderBorder" Grid.Row="0" Background="Transparent" 
                    CornerRadius="12,12,0,0" Padding="14,12"
                    MouseLeftButtonDown="HeaderBorder_MouseLeftButtonDown"
                    MouseLeftButtonUp="HeaderBorder_MouseLeftButtonUp"
                    MouseMove="HeaderBorder_MouseMove">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="⚡" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    
                    <TextBlock Grid.Column="1" Text="后台任务" FontWeight="SemiBold" FontSize="13"
                               VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    
                    <!-- 操作按钮组 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Opacity="0.8">
                        <Button Content="" FontFamily="Segoe MDL2 Assets" Click="ClearCompleted_Click" 
                                Style="{StaticResource IconButtonButtonStyle}" 
                                ToolTip="清理已完成" Margin="0,0,4,0"/>
                        <Button Content="✕" Click="Close_Click" 
                                Style="{StaticResource IconButtonButtonStyle}" 
                                FontSize="10" FontWeight="Bold"
                                ToolTip="关闭"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 列表区域 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12,0,12,14">
                <ItemsControl x:Name="TasksList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type tq:FileOperationTask}">
                            <Grid Margin="0,4,0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 标题行 -->
                                <Grid x:Name="TopLine" Grid.Row="0" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Description}" 
                                                   FontWeight="Medium" FontSize="12"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   MaxWidth="180" TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- 进度百分比文字 -->
                                        <TextBlock Text="{Binding Progress, StringFormat=' ({0:0}%)'}" 
                                                   FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <!-- 状态标签 (极简点状) -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="6" Height="6" Margin="0,0,4,0"
                                                 Fill="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusToText}}" 
                                                   FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- 进度条 -->
                                <ProgressBar Grid.Row="1" 
                                             Value="{Binding Progress}" Maximum="100" 
                                             Style="{StaticResource CompactProgressBarStyle}"
                                             Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"
                                             Margin="0,2,0,6"/>
                                
                                <!-- 当前详情行 -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{Binding CurrentFile}" 
                                               FontSize="11" Opacity="0.6"
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               TextTrimming="PathEllipsis" 
                                               VerticalAlignment="Center"/>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                                        <!-- 暂停/继续 -->
                                        <Button Content="" FontFamily="Segoe MDL2 Assets" 
                                                Tag="{Binding}" Click="PauseResume_Click" 
                                                Style="{StaticResource IconButtonButtonStyle}" 
                                                FontSize="10" Width="20" Height="20"
                                                Visibility="{Binding Status, Converter={local:StatusToVisibilityConverter Parameter=CanPause}}"/>
                                        
                                        <!-- 取消 -->
                                        <Button Content="" FontFamily="Segoe MDL2 Assets" 
                                                Tag="{Binding}" Click="CancelTask_Click" 
                                                Style="{StaticResource IconButtonButtonStyle}" 
                                                FontSize="10" Width="20" Height="20"
                                                Visibility="{Binding Status, Converter={local:StatusToVisibilityConverter Parameter=CanCancel}}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- 底部分割线 (不是最后一条才显示，XAML循环中很难判断，通常用Margin控制) -->
                                <Border Grid.Row="2" VerticalAlignment="Bottom" Height="1" 
                                        Background="{DynamicResource BorderSubtleBrush}" 
                                        Margin="0,8,-12,0" Opacity="0.5"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
