<UserControl x:Class="YiboFile.Controls.AddressBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YiboFile.Controls"
             xmlns:helpers="clr-namespace:YiboFile.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:ResourceKeyConverter x:Key="ResourceKeyConverter"/>

        <Style x:Key="SearchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <TextBlock x:Name="Icon"
                                       Text="&#xE721;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlHoverBrush}"/>
                                <Setter TargetName="Icon" Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentDefaultBrush}"/>
                                <Setter TargetName="Icon" Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- èƒŒæ™¯å’Œè¾¹æ¡† -->
        <Border Grid.ColumnSpan="3"
                Background="{DynamicResource ControlBackgroundBrush}"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="1"
                CornerRadius="6"/>

        <!-- ç¼–è¾‘æ¨¡å¼å®¹å™¨ -->
        <Grid Name="EditModeContainer" Grid.Column="1" Visibility="Collapsed">
            <TextBox Name="AddressTextBox"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     Padding="8,0"
                     KeyDown="AddressTextBox_KeyDown"
                     LostFocus="AddressTextBox_LostFocus"
                     ContextMenuOpening="AddressTextBox_ContextMenuOpening"/>
            
            <ToggleButton Name="SearchModeToggle" 
                          HorizontalAlignment="Right"
                          Style="{StaticResource SearchToggleStyle}"
                          Margin="0,0,4,0"/>
        </Grid>

        <!-- åœ°å€å»ºè®®å¼¹å‡ºé¡¹ -->
        <Popup Name="HistoryPopup" 
               PlacementTarget="{Binding ElementName=BreadcrumbContainer}"
               Placement="Bottom"
               StaysOpen="False"
               Width="{Binding ActualWidth, ElementName=BreadcrumbContainer}"
               AllowsTransparency="True">
            <Border Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,4,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
                <ListBox Name="HistoryListBox"
                         MaxHeight="300"
                         BorderThickness="0"
                         Background="Transparent"
                         SelectionChanged="HistoryListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="32" Margin="4,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding IconKey, Converter={StaticResource ResourceKeyConverter}}" 
                                           FontFamily="{DynamicResource IconFontFamily}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           FontSize="16"/>
                                <TextBlock Grid.Column="1" Text="{Binding DisplayPath}" 
                                           VerticalAlignment="Center" Margin="8,0"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="2" Text="{Binding DisplayType}" 
                                           VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Popup>
        
        <!-- é¢åŒ…å±‘å¯¼èˆªï¼ˆé»˜è®¤æ˜¾ç¤ºï¼‰ -->
        <Border Name="BreadcrumbContainer"
                Grid.Column="1"
                Background="Transparent"
                MouseLeftButtonDown="BreadcrumbContainer_MouseLeftButtonDown"
                VerticalAlignment="Stretch">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="åˆ·æ–°" Click="AddressBarRefresh_Click" Icon="ðŸ”„"/>
                    <MenuItem Header="å¤åˆ¶åœ°å€" Click="AddressBarCopyPath_Click" Icon="ðŸ“‹"/>
                </ContextMenu>
            </Border.ContextMenu>
            <Grid Name="PathContentGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- å·¦ä¾§ï¼špathå‰ç¼€å’Œçœç•¥å·ï¼ˆæˆ–å®Œæ•´è·¯å¾„ï¼‰ -->
                <TextBlock Name="BreadcrumbText"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Padding="5,3"
                           ToolTipService.ShowOnDisabled="True"/>
                
                <!-- å³ä¾§ï¼šè·¯å¾„å°¾éƒ¨ï¼ˆä»…é•¿è·¯å¾„æ—¶ä½¿ç”¨ï¼Œå³å¯¹é½ï¼‰ -->
                <TextBlock Name="BreadcrumbTail"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Padding="5,3"
                           HorizontalAlignment="Right"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
