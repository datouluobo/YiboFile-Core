<UserControl x:Class="YiboFile.Controls.FileListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:YiboFile.ViewModels"
             xmlns:colmgr="clr-namespace:YiboFile.Services.UI.ColumnManagement"
             xmlns:local="clr-namespace:YiboFile.Controls"
             xmlns:converters="clr-namespace:YiboFile.Controls.Converters"
             xmlns:helpers="clr-namespace:YiboFile.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToThicknessConverter x:Key="NullToThicknessConverter"/>
        <helpers:ResourceKeyConverter x:Key="ResourceKeyConverter"/>

        <!-- Library Card Template (Grid Layout Card with Glassmorphism) -->
        <DataTemplate x:Key="LibraryCardTemplate">
            <Border Width="240" Height="160" Margin="10" 
                    CornerRadius="12"
                    ClipToBounds="True"
                    Background="Transparent">
                <Grid>
                    <!-- Background with Glassmorphism effect -->
                    <Border x:Name="BackgroundBorder" 
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Opacity="0.7" 
                            CornerRadius="12"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                    </Border>

                    <!-- Selection/Hover Overlay -->
                    <Border x:Name="OverlayBorder" CornerRadius="12" Background="{DynamicResource AccentBrush}" Opacity="0"/>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Icon with Folder + Library Branding -->
                        <Grid Width="80" Height="80" Margin="0,0,0,12">
                            <!-- Background folder shape (Layered) -->
                            <TextBlock Text="ðŸ“" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5" Margin="4,4,0,0"/>
                            <TextBlock x:Name="IconText" Text="ðŸ“š" Foreground="{DynamicResource AccentBrush}" 
                                       FontSize="52" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="{Binding Name}" 
                                   FontSize="16" FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        
                        <TextBlock Text="åº“" 
                                   FontSize="11" Opacity="0.6"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                    <Setter TargetName="BackgroundBorder" Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
                    <Setter TargetName="OverlayBorder" Property="Opacity" Value="0.1"/>
                    <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                    <Setter TargetName="BackgroundBorder" Property="BorderThickness" Value="2"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.9"/>
                    <Setter TargetName="OverlayBorder" Property="Opacity" Value="0.05"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="IconText" Storyboard.TargetProperty="FontSize" To="58" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="IconText" Storyboard.TargetProperty="FontSize" To="52" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <DataTemplate x:Key="ThumbnailTemplate">
            <Border Width="{Binding ItemWidth, RelativeSource={RelativeSource AncestorType={x:Type local:FileListControl}}}" 
                    Height="{Binding ItemHeight, RelativeSource={RelativeSource AncestorType={x:Type local:FileListControl}}}" 
                    Margin="5" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- ç¼©ç•¥å›¾åŒºåŸŸ -->
                    <Image Grid.Row="0"
                           Source="{Binding Thumbnail}" 
                           Width="{Binding ThumbnailSize, RelativeSource={RelativeSource AncestorType={x:Type local:FileListControl}}}" 
                           Height="{Binding ThumbnailSize, RelativeSource={RelativeSource AncestorType={x:Type local:FileListControl}}}"
                           Stretch="Uniform" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    
                    <!-- æ–‡ä»¶ååŒºåŸŸ -->
                    <Grid Grid.Row="1" x:Name="ThumbnailNameGrid">
                        <TextBlock x:Name="ThumbnailFileName"
                                   Text="{Binding Name}" 
                                   TextAlignment="Center" 
                                   TextWrapping="Wrap" 
                                   MaxHeight="36" 
                                   TextTrimming="CharacterEllipsis"
                                   Margin="4,2"
                                   FontSize="11"
                                   ToolTip="{Binding Name}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRenaming}" Value="True">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <!-- ç¼©ç•¥å›¾æ¨¡å¼é‡å‘½å Popup -->
                        <Popup x:Name="ThumbnailRenamePopup" 
                               PlacementTarget="{Binding ElementName=ThumbnailNameGrid}"
                               Placement="Center"
                               HorizontalOffset="0"
                               VerticalOffset="0"
                               StaysOpen="True"
                               AllowsTransparency="False"
                               IsOpen="{Binding IsRenaming}">
                            <Border MinHeight="24"
                                    Width="{Binding ItemWidth, RelativeSource={RelativeSource AncestorType={x:Type local:FileListControl}}}"
                                    Background="#FFFFFF"
                                    BorderBrush="#0078D4"
                                    BorderThickness="2"
                                    CornerRadius="2">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                </Border.Effect>
                                <TextBox x:Name="ThumbnailRenameTextBox"
                                         Text="{Binding RenameText, UpdateSourceTrigger=PropertyChanged}" 
                                         VerticalAlignment="Center"
                                         TextAlignment="Center"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="False"
                                         Background="Transparent"
                                         Foreground="#000000"
                                         CaretBrush="#0078D4"
                                         BorderThickness="0" Padding="4,2"
                                         KeyDown="RenameTextBox_KeyDown"
                                         IsVisibleChanged="RenameTextBox_IsVisibleChanged"
                                         LostFocus="RenameTextBox_LostFocus"/>
                            </Border>
                        </Popup>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- å¹³é“ºè§†å›¾æ¨¡æ¿ (Tiles) - 64x64å›¾æ ‡ + å¤šè¡Œè¯¦ç»†æ–‡æœ¬ -->
        <DataTemplate x:Key="TilesTemplate">
            <Border Width="250" Height="72" Margin="4" Background="Transparent" 
                    ToolTip="{Binding Path}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="72"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- å›¾æ ‡/ç¼©ç•¥å›¾ -->
                    <Image Grid.Column="0" Source="{Binding Thumbnail}" Width="64" Height="64" 
                           Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <!-- è¯¦ç»†ä¿¡æ¯ -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" 
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                        <TextBlock Text="{Binding Type}" Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                        <TextBlock Text="{Binding Size}" Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- å†…å®¹è§†å›¾æ¨¡æ¿ (Content) - å•è¡Œå±•å¼€å¼è¯¦ç»†ä¿¡æ¯ -->
        <DataTemplate x:Key="ContentTemplate">
            <Border Height="56" Margin="2" Background="Transparent" 
                    BorderBrush="{DynamicResource BorderDefaultBrush}" BorderThickness="0,0,0,1"
                    ToolTip="{Binding Path}">
                <Grid Margin="8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="48"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- å›¾æ ‡ -->
                    <Image Grid.Column="0" Source="{Binding Thumbnail}" Width="40" Height="40" 
                           Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <!-- åç§° + ç±»åž‹ -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Type}" Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                            <TextBlock Text=" Â· " Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                            <TextBlock Text="{Binding Size}" Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                            <TextBlock Text=" Â· " Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                            <TextBlock Text="{Binding ModifiedDate}" Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                    <!-- æ ‡ç­¾/å¤‡æ³¨ -->
                    <TextBlock Grid.Column="2" Text="{Binding Notes}" MaxWidth="200" TextTrimming="CharacterEllipsis" 
                               Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11" VerticalAlignment="Center" Margin="8,0"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- å°å›¾æ ‡è§†å›¾æ¨¡æ¿ (SmallIcons) - 16pxå›¾æ ‡ + æ–‡ä»¶å -->
        <DataTemplate x:Key="SmallIconsTemplate">
            <Border Width="180" Height="28" Margin="2" Background="Transparent"
                    ToolTip="{Binding Path}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0">
                    <Image Source="{Binding Thumbnail}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                               Foreground="{DynamicResource ForegroundBrush}"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- ç´§å‡‘åˆ—è¡¨æ¨¡æ¿ (Compact) - å•è¡Œç®€åŒ– -->
        <DataTemplate x:Key="CompactTemplate">
            <Border Height="24" Margin="0" Background="Transparent" 
                    BorderBrush="{DynamicResource BorderDefaultBrush}" BorderThickness="0,0,0,1"
                    ToolTip="{Binding Path}">
                <Grid Margin="8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="{Binding Thumbnail}" Width="16" Height="16" Stretch="Uniform"/>
                    <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="4,0" 
                               TextTrimming="CharacterEllipsis" Foreground="{DynamicResource ForegroundBrush}"/>
                    <TextBlock Grid.Column="2" Text="{Binding Size}" HorizontalAlignment="Right" VerticalAlignment="Center" 
                               Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                    <TextBlock Grid.Column="3" Text="{Binding ModifiedDate}" HorizontalAlignment="Right" VerticalAlignment="Center" 
                               Foreground="{DynamicResource ForegroundSecondaryBrush}" FontSize="11"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- ç¼©ç•¥å›¾è§†å›¾çš„ WrapPanel å¸ƒå±€ -->
        <ItemsPanelTemplate x:Key="WrapPanelTemplate">
            <WrapPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>

        <!-- åˆ—è¡¨è§†å›¾çš„ VirtualizingStackPanel å¸ƒå±€ -->
        <ItemsPanelTemplate x:Key="StackPanelTemplate">
            <VirtualizingStackPanel/>
        </ItemsPanelTemplate>



        <local:FileListTemplateSelector x:Key="FileListItemSelector"
                                      LibraryTemplate="{StaticResource LibraryCardTemplate}"
                                      DefaultTemplate="{StaticResource ThumbnailTemplate}"/>
    </UserControl.Resources>
    <Grid>
        <!-- æ–‡ä»¶åˆ—è¡¨ -->
        <Border Background="{DynamicResource AppBackgroundBrush}">
            <Grid>
                <!-- æ™®é€šåˆ—è¡¨è§†å›¾ -->
                <ListView x:Name="FilesListView" 
                      SelectionMode="Extended"
                      Background="{DynamicResource AppBackgroundBrush}"
                      BorderThickness="0"
                      FocusVisualStyle="{x:Null}"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.IsVirtualizingWhenGrouping="False"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <StaticResource ResourceKey="FileListItemStyle"/>
                    </ListView.ItemContainerStyle>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Expander IsExpanded="True" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderDefaultBrush}">
                                                    <Expander.Header>
                                                        <StackPanel Orientation="Horizontal" Margin="4">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,8,0"
                                                                       Foreground="{DynamicResource ForegroundBrush}"/>
                                                            <TextBlock Text="{Binding ItemCount, StringFormat=({0})}" VerticalAlignment="Center" 
                                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <ItemsPresenter />
                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.View>
                        <GridView x:Name="FilesGridView" ColumnHeaderContainerStyle="{StaticResource FileListColumnHeaderStyle}">
                            <GridViewColumn x:Name="ColName">
                                <GridViewColumn.Header>
                                    <TextBlock Text="åç§°" Tag="Name"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid x:Name="NameCellGrid">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- å›¾æ ‡ -->
                                            <Image Grid.Column="0" Source="{Binding Thumbnail}" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center" Stretch="Uniform"/>
                                            
                                            <TextBlock Grid.Column="1" x:Name="FileNameText" Text="{Binding Name}" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRenaming}" Value="True">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <!-- é‡å‘½å Popup - çœŸæ­£çš„æ‚¬æµ®å±‚ï¼Œå¯ä»¥é®æŒ¡ä»»ä½•å†…å®¹ -->
                                            <Popup x:Name="RenamePopup" 
                                                   PlacementTarget="{Binding ElementName=FileNameText}"
                                                   Placement="Top"
                                                   HorizontalOffset="-6"
                                                   VerticalOffset="20"
                                                   StaysOpen="True"
                                                   AllowsTransparency="False"
                                                   IsOpen="{Binding IsRenaming}">
                                                <Border MinHeight="24"
                                                        Background="#FFFFFF"
                                                        BorderBrush="#0078D4"
                                                        BorderThickness="2"
                                                        CornerRadius="2">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <TextBox x:Name="RenameTextBox"
                                                             Text="{Binding RenameText, UpdateSourceTrigger=PropertyChanged}" 
                                                             MinWidth="350"
                                                             VerticalAlignment="Center"
                                                             TextAlignment="Left"
                                                             Background="Transparent"
                                                             Foreground="#000000"
                                                             CaretBrush="#0078D4"
                                                             BorderThickness="0" Padding="4,2"
                                                             KeyDown="RenameTextBox_KeyDown"
                                                             IsVisibleChanged="RenameTextBox_IsVisibleChanged"
                                                             LostFocus="RenameTextBox_LostFocus"/>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn x:Name="ColType" Width="60" HeaderContainerStyle="{StaticResource NonResizableFileColumnHeaderStyle}" DisplayMemberBinding="{Binding Type}">
                                <GridViewColumn.Header>
                                    <TextBlock Text="ç±»åž‹" Tag="Type"/>
                                </GridViewColumn.Header>
                            </GridViewColumn>

                            <GridViewColumn x:Name="ColSize" Width="90" HeaderContainerStyle="{StaticResource NonResizableFileColumnHeaderStyle}">
                                <GridViewColumn.Header>
                                    <TextBlock Text="å¤§å°" Tag="Size"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Size}" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn x:Name="ColModifiedDate" Width="100" HeaderContainerStyle="{StaticResource NonResizableFileColumnHeaderStyle}" DisplayMemberBinding="{Binding ModifiedDate}">
                                <GridViewColumn.Header>
                                    <TextBlock Text="ä¿®æ”¹æ—¥æœŸ" Tag="ModifiedDate"/>
                                </GridViewColumn.Header>
                            </GridViewColumn>

                            <GridViewColumn Width="60" HeaderContainerStyle="{StaticResource NonResizableFileColumnHeaderStyle}">
                                <GridViewColumn.Header>
                                    <TextBlock Text="åˆ›å»º" Tag="CreatedTime"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid ClipToBounds="True">
                                            <Border Background="{Binding CreatedTimeBrush}" Margin="-6,0" Padding="8,2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                <TextBlock Text="{Binding CreatedTime}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn x:Name="ColTags" Width="150" HeaderContainerStyle="{StaticResource NonResizableFileColumnHeaderStyle}">
                                <GridViewColumn.Header>
                                    <TextBlock Text="æ ‡ç­¾" Tag="Tags"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ItemsControl ItemsSource="{Binding TagList}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                             <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding Name}" 
                                                            Background="{Binding ColorBrush}"
                                                            Foreground="#282828"
                                                            Margin="0,0,4,2"
                                                            Padding="6,2"
                                                            BorderThickness="0"
                                                            FontSize="11"
                                                            Click="Tag_Click"
                                                            Cursor="Hand"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" 
                                                                        Background="{TemplateBinding Background}" 
                                                                        BorderBrush="#CCCCCC"
                                                                        BorderThickness="{Binding Color, Converter={StaticResource NullToThicknessConverter}}"
                                                                        CornerRadius="4" 
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn x:Name="ColNotes" Width="200" HeaderContainerStyle="{StaticResource NonResizableFileColumnHeaderStyle}" DisplayMemberBinding="{Binding Notes}">
                                <GridViewColumn.Header>
                                    <TextBlock Text="å¤‡æ³¨" Tag="Notes"/>
                                </GridViewColumn.Header>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                

                
                <!-- åŠ è½½æ›´å¤šæŒ‰é’® -->
                <Button x:Name="LoadMoreBtn" Content="åŠ è½½æ›´å¤š" Width="88" Height="28"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="8"
                        Visibility="Collapsed" Click="LoadMoreBtn_Click"/>
                
                <!-- ç©ºçŠ¶æ€æç¤º -->
                <TextBlock x:Name="EmptyStateText" 
                           Text="æš‚æ— æ–‡ä»¶"
                           FontSize="16"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
                
                <!-- æ¡†é€‰è¦†ç›–å±‚ - ä»…ç”¨äºŽç»˜åˆ¶é€‰æ‹©çŸ©å½¢ï¼Œä¸æ‹¦æˆªé¼ æ ‡äº‹ä»¶ -->
                <Canvas x:Name="LassoSelectionCanvas" 
                        Background="Transparent" 
                        IsHitTestVisible="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="100"/>

                <!-- åˆ—æ‹–æ‹½ä½ç½®æŒ‡ç¤ºå™¨ (åž‚ç›´çº¿) -->
                <Canvas x:Name="ColumnDropIndicatorCanvas"
                        Background="Transparent"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="200"
                        Visibility="Collapsed">
                    <Border x:Name="ColumnDropIndicator"
                            Width="3"
                            Height="30"
                            Background="{DynamicResource AccentBrush}"
                            SnapsToDevicePixels="True">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="{DynamicResource AccentColor}" Opacity="0.8"/>
                        </Border.Effect>
                    </Border>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</UserControl>


