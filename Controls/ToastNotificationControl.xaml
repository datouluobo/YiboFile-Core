<UserControl x:Class="YiboFile.Controls.ToastNotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YiboFile.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300"
             x:Name="Root"
             Opacity="0">
    
    <UserControl.Resources>
        <Storyboard x:Key="ShowAnimation">
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Margin"
                                From="0,20,0,0" To="0,0,0,10" Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <Storyboard x:Key="HideAnimation">
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Margin"
                                To="0,-20,0,0" Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>

    <Border CornerRadius="8" 
            Background="{DynamicResource AppBackgroundBrush}"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}"
            Margin="0,0,0,20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Direction="270" Opacity="0.25"/>
        </Border.Effect>

        <Grid Margin="16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <TextBlock x:Name="IconText" 
                       Grid.Column="0"
                       Text="âœ“" 
                       FontFamily="{DynamicResource IconFontFamily}"
                       FontSize="20"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource AccentBrush}"
                       Margin="0,0,16,0"/>

            <!-- Message -->
            <TextBlock x:Name="MessageText"
                       Grid.Column="1"
                       Text="Operation Successful"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource ForegroundPrimaryBrush}"/>

            <!-- Close Button (Optional) -->
            <Button x:Name="CloseButton"
                    Grid.Column="2"
                    Content="{DynamicResource Icon_Close}"
                    Width="20" Height="20"
                    FontSize="10"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Click="CloseButton_Click"
                    Visibility="Collapsed"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontFamily="{DynamicResource IconFontFamily}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>

