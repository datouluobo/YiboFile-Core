<UserControl x:Class="YiboFile.Controls.BackupBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YiboFile.Controls"
             xmlns:vm="clr-namespace:YiboFile.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource AppBackgroundBrush}"
             Foreground="{DynamicResource TextPrimaryBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="ListViewItem">
             <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
             <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
        <Style TargetType="ListBoxItem">
             <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="刷新" Padding="10,5" Command="{Binding LoadCommand}" Margin="0,0,10,0"/>
                <Button Content="清理旧备份" Padding="10,5" Command="{Binding CleanCommand}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="{DynamicResource AppBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Backup Dates -->
            <DockPanel Grid.Column="0">
                <TextBlock Text="备份日期" DockPanel.Dock="Top" Margin="10" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <ListBox ItemsSource="{Binding Backups}" SelectedItem="{Binding SelectedBackup}" BorderThickness="0" Background="Transparent">
                     <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Date}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock Text="{Binding Records.Count, StringFormat=' ({0})'}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </DataTemplate>
                     </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>

            <!-- Splitter 1 -->
            <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" Background="{DynamicResource BorderBrush}"/>

            <!-- Middle: Files in selected backup -->
            <DockPanel Grid.Column="2">
                <TextBlock Text="文件列表" DockPanel.Dock="Top" Margin="10" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                
                <ListView ItemsSource="{Binding SelectedBackup.Records}" SelectedItem="{Binding CurrentPreviewRecord}" BorderThickness="0" Background="Transparent" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="原始路径" Width="300" DisplayMemberBinding="{Binding OriginalPath}"/>
                            <GridViewColumn Header="大小" Width="80" DisplayMemberBinding="{Binding Size}"/>
                            <GridViewColumn Header="删除时间" Width="130" DisplayMemberBinding="{Binding DeletionTime}"/>
                            <GridViewColumn Header="操作" Width="110">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="恢复" Margin="0,0,5,0" Padding="5,2" 
                                                    Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="删除" Padding="5,2"
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}" Foreground="Red"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>

            <!-- Splitter 2 -->
            <GridSplitter Grid.Column="3" Width="1" HorizontalAlignment="Center" Background="{DynamicResource BorderBrush}"/>

            <!-- Right: Preview -->
            <DockPanel Grid.Column="4" Background="{DynamicResource PanelBackgroundBrush}">
                <TextBlock Text="预览" DockPanel.Dock="Top" Margin="10" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,0,0,0">
                    <Grid>
                        <!-- Preview Content -->
                        <ContentControl Content="{Binding PreviewViewModel}">
                            <ContentControl.Resources>
                                <DataTemplate DataType="{x:Type vm:Previews.ImagePreviewViewModel}">
                                    <Image Source="{Binding ImageSource}" Stretch="Uniform"/>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type vm:Previews.TextPreviewViewModel}">
                                    <TextBox Text="{Binding Content}" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" FontFamily="Consolas"/>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type vm:Previews.ErrorPreviewViewModel}">
                                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ContentControl.Resources>
                        </ContentControl>
                        
                        <!-- Empty State -->
                        <TextBlock Text="选择一个文件进行预览" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PreviewViewModel}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </DockPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                     <!-- 暂时隐藏批量操作，等待 ListView 多选绑定支持 -->
                     <!--
                     <Button Content="删除选中" Command="{Binding DeleteSelectedCommand}" Margin="0,0,10,0" Foreground="Red"/>
                     <Button Content="恢复选中" Command="{Binding RestoreSelectedCommand}" />
                     -->
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
             <TextBlock Text="加载中..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Black"/>
        </Grid>
    </Grid>
</UserControl>
