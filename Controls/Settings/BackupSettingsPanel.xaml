<UserControl x:Class="YiboFile.Controls.Settings.BackupSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YiboFile.Controls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="备份设置" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
        
        <!-- 备份位置 -->
        <GroupBox Header="备份存储" Margin="0,0,0,20" Padding="15">
            <StackPanel>
                <TextBlock Text="备份文件夹位置" FontWeight="Medium" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="BackupPathTextBox" Padding="5" IsReadOnly="True" Background="#F5F5F5"/>
                    <Button Grid.Column="1" Content="浏览..." Padding="15,5" Margin="10,0,0,0" Click="BrowseButton_Click"/>
                </Grid>
                <TextBlock Text="留空则使用默认位置: %LocalAppData%\YiboFile\Backup" 
                           FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>

                <Button Content="打开备份文件夹" HorizontalAlignment="Left" Margin="0,10,0,0" Click="OpenFolderButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- 管理与策略 -->
        <GroupBox Header="管理与策略" Margin="0,0,0,20" Padding="15">
            <StackPanel>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="保留备份时间 (天):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="RetentionComboBox" Grid.Column="1" Width="150" HorizontalAlignment="Left" SelectionChanged="RetentionComboBox_SelectionChanged">
                        <ComboBoxItem Tag="0">永久保存</ComboBoxItem>
                        <ComboBoxItem Tag="7">7 天</ComboBoxItem>
                        <ComboBoxItem Tag="30">30 天</ComboBoxItem>
                        <ComboBoxItem Tag="90">90 天</ComboBoxItem>
                        <ComboBoxItem Tag="180">180 天</ComboBoxItem>
                        <ComboBoxItem Tag="365">1 年</ComboBoxItem>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="ManageButton" Content="管理备份..." Padding="20,8" Margin="0,0,15,0" 
                            Background="{DynamicResource AccentDefaultBrush}" Foreground="White"
                            Click="ManageButton_Click"/>
                    
                    <Button Content="清理旧备份" Padding="15,8" Click="CleanButton_Click"/>
                </StackPanel>
                <TextBlock Text="注意: '管理备份' 功能将打开独立的备份浏览器窗口。" FontSize="12" Foreground="Gray" Margin="0,8,0,0"/>
            </StackPanel>
        </GroupBox>

        <TextBlock Text="备份功能说明" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,10"/>
        <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}">
            YiboFile 在您删除或覆盖文件时会自动创建备份。如果启用了撤销功能，这些备份允许您快速恢复误删的文件。<LineBreak/>
            备份文件存储在本地，请定期清理以释放磁盘空间。
        </TextBlock>
    </StackPanel>
</UserControl>
