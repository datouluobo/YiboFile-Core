<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- ========================================
         主题元数据 (Theme Metadata)
         ======================================== -->
    <sys:String x:Key="ThemeId">Forest</sys:String>
    <sys:String x:Key="ThemeDisplayName">森林绿</sys:String>
    <sys:String x:Key="ThemeDescription">自然舒适的森林绿主题，护眼且放松</sys:String>
    <sys:String x:Key="ThemeAuthor">YiboSoft</sys:String>
    <sys:String x:Key="ThemeVersion">1.0.0</sys:String>
    
    <!-- 预览色彩 (Preview Colors) -->
    <sys:String x:Key="PreviewPrimaryColor">#43A047</sys:String>
    <sys:String x:Key="PreviewBackgroundColor">#FAFAFA</sys:String>
    <sys:String x:Key="PreviewSurfaceColor">#F1F8F4</sys:String>
    <sys:String x:Key="PreviewTextColor">#1B5E20</sys:String>
    
    <!-- ========================================
         核心资源 (28个)
         ======================================== -->
    
    <!-- 1. 背景类 (4个) -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#FAFAFA"/>      <!-- 主背景 -->
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#F1F8F4"/>    <!-- 次背景/面板 -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#F1F8F4"/>     <!-- 标题栏背景 -->
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#E8F5E9"/>     <!-- 三级背景/卡片 -->
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="#FFFFFF"/>     <!-- 对话框/浮动 -->
    
    <!-- 2. 文本类 (4个) -->
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#1B5E20"/>      <!-- 主要文本 -->
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#558B2F"/>    <!-- 次要文本 -->
    <SolidColorBrush x:Key="ForegroundDisabledBrush" Color="#A5D6A7"/>     <!-- 禁用文本 -->
    <SolidColorBrush x:Key="ForegroundOnAccentBrush" Color="#FFFFFF"/>     <!-- 强调色上的文本 -->
    
    <!-- 3. 边框类 (3个) -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="#C8E6C9"/>          <!-- 默认边框 -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#E8F5E9"/>           <!-- 淡边框 -->
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#43A047"/>            <!-- 聚焦边框 -->
    
    <!-- 4. 强调色/交互 (5个) -->
    <SolidColorBrush x:Key="AccentDefaultBrush" Color="#43A047"/>          <!-- 主强调色 -->
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#388E3C"/>            <!-- 悬停 -->
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#2E7D32"/>          <!-- 按下 -->
    <SolidColorBrush x:Key="AccentSelectedBrush" Color="#66BB6A"/>         <!-- 选中 -->
    <SolidColorBrush x:Key="AccentLightBrush" Color="#E8F5E9"/>            <!-- 浅强调色背景 -->
    
    <!-- 5. 控件状态 (4个) -->
    <SolidColorBrush x:Key="ControlDefaultBrush" Color="#E8F5E9"/>         <!-- 控件默认 -->
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#C8E6C9"/>           <!-- 控件悬停 -->
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#A5D6A7"/>         <!-- 控件按下 -->
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#F1F8F4"/>        <!-- 控件禁用 -->
    
    <!-- 6. 状态色 (4个) -->
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="#43A047"/>          <!-- 成功 -->
    <SolidColorBrush x:Key="StatusWarningBrush" Color="#FFC107"/>          <!-- 警告 -->
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#DC3545"/>            <!-- 错误 -->
    <SolidColorBrush x:Key="StatusInfoBrush" Color="#00796B"/>             <!-- 信息 -->
    
    <!-- 7. 特殊用途 (4个) -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>        <!-- 透明 -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#66000000"/>              <!-- 遮罩 -->
    <SolidColorBrush x:Key="OverlayLightBrush" Color="#33000000"/>         <!-- 浅遮罩 -->
    <SolidColorBrush x:Key="DisabledBrush" Color="#A5D6A7"/>               <!-- 通用禁用色 -->
    
    <!-- ========================================
         向后兼容别名
         ======================================== -->
    
    <!-- 背景别名 -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F1F8F4"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F1F8F4"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#FFFFFF"/>
    
    <!-- 文本别名 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1B5E20"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#558B2F"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#A5D6A7"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="#FFFFFF"/>
    
    <!-- 边框别名 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="BorderStrongBrush" Color="#C8E6C9"/>
    
    <!-- 强调色别名 -->
    <SolidColorBrush x:Key="AccentBrush" Color="#43A047"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFF"/>
    
    <!-- 按钮别名 -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#C8E6C9"/>
    
    <!-- 输入框别名 -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#C8E6C9"/>
    
    <!-- 预览组件别名 -->
    <SolidColorBrush x:Key="PreviewTitleBackgroundBrush" Color="#F1F8F4"/>
    <SolidColorBrush x:Key="PreviewTitleForegroundBrush" Color="#1B5E20"/>
    <SolidColorBrush x:Key="PreviewPanelBackgroundBrush" Color="#F1F8F4"/>
    <SolidColorBrush x:Key="PreviewTextPrimaryBrush" Color="#1B5E20"/>

    <!-- 状态色别名 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#43A047"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#00796B"/>

</ResourceDictionary>
