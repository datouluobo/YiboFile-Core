<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ========================================
         主题元数据 (Theme Metadata)
         ======================================== -->
    <sys:String x:Key="ThemeId">Dark</sys:String>
    <sys:String x:Key="ThemeDisplayName">深色模式</sys:String>
    <sys:String x:Key="ThemeDescription">低亮度深色主题，适合夜间使用，护眼舒适</sys:String>
    <sys:String x:Key="ThemeAuthor">YiboSoft</sys:String>
    <sys:String x:Key="ThemeVersion">2.0.0</sys:String>
    
    <!-- 预览色彩 (Preview Colors) -->
    <sys:String x:Key="PreviewPrimaryColor">#4DA3FF</sys:String>
    <sys:String x:Key="PreviewBackgroundColor">#202020</sys:String>
    <sys:String x:Key="PreviewSurfaceColor">#2D2D2D</sys:String>
    <sys:String x:Key="PreviewTextColor">#FFFFFF</sys:String>

    <!-- ========================================
         核心资源 (28个)
         ======================================== -->
    
    <!-- 1. 背景类 (4个) -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#202020"/>      <!-- 主背景 -->
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#2D2D2D"/>    <!-- 次背景/面板 -->
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#333333"/>     <!-- 三级背景/卡片 -->
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="#2D2D2D"/>     <!-- 对话框/浮动 -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#2D2D2D"/>     <!-- 标题栏背景 (与次背景一致) -->
    
    <!-- 2. 文本类 (4个) -->
    <Color x:Key="ForegroundPrimaryColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#FFFFFF"/>      <!-- 主要文本 -->
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#B0B0B0"/>    <!-- 次要文本 -->
    <SolidColorBrush x:Key="ForegroundDisabledBrush" Color="#6C757D"/>     <!-- 禁用文本 -->
    <SolidColorBrush x:Key="ForegroundOnAccentBrush" Color="#000000"/>     <!-- 强调色上的文本 -->
    
    <!-- 3. 边框类 (3个) -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="#404040"/>          <!-- 默认边框 -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#3A3A3A"/>           <!-- 淡边框 -->
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#4DA3FF"/>            <!-- 聚焦边框 -->
    
    <!-- 4. 强调色/交互 (5个) -->
    <Color x:Key="AccentColor">#4DA3FF</Color>
    <Color x:Key="AccentHoverColor">#80BFFF</Color>
    <SolidColorBrush x:Key="AccentDefaultBrush" Color="#4DA3FF"/>          <!-- 主强调色 -->
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#80BFFF"/>            <!-- 悬停 -->
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#2196F3"/>          <!-- 按下 -->
    <SolidColorBrush x:Key="AccentSelectedBrush" Color="#64B5F6"/>         <!-- 选中 -->
    <SolidColorBrush x:Key="AccentLightBrush" Color="#1E3A5F"/>            <!-- 浅强调色背景 -->
    
    <!-- 5. 控件状态 (4个) -->
    <SolidColorBrush x:Key="ControlDefaultBrush" Color="#3A3A3A"/>         <!-- 控件默认 -->
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#4A4A4A"/>           <!-- 控件悬停 -->
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#555555"/>         <!-- 控件按下 -->
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#2A2A2A"/>        <!-- 控件禁用 -->
    
    <!-- 6. 状态色 (4个) -->
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="#4CAF50"/>          <!-- 成功 -->
    <SolidColorBrush x:Key="StatusWarningBrush" Color="#FFC107"/>          <!-- 警告 -->
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#E57373"/>            <!-- 错误 -->
    <SolidColorBrush x:Key="StatusInfoBrush" Color="#64B5F6"/>             <!-- 信息 -->
    
    <!-- 7. 特殊用途 (4个) -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>        <!-- 透明 -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#66FFFFFF"/>              <!-- 遮罩 -->
    <SolidColorBrush x:Key="OverlayLightBrush" Color="#33FFFFFF"/>         <!-- 浅遮罩 -->
    <SolidColorBrush x:Key="DisabledBrush" Color="#505050"/>               <!-- 通用禁用色 -->
    <SolidColorBrush x:Key="DividerBrush" Color="#404040"/>                <!-- 分隔线 -->
    <SolidColorBrush x:Key="ShadowBrush" Color="#66000000"/>               <!-- 阴影 -->
    
    <!-- ========================================
         向后兼容别名
         ======================================== -->
    
    <!-- 背景别名 -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#202020"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#2D2D2D"/>
    
    <!-- 文本别名 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="#000000"/>
    
    <!-- 边框别名 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>
    <SolidColorBrush x:Key="BorderStrongBrush" Color="#404040"/>
    
    <!-- 强调色别名 -->
    <SolidColorBrush x:Key="AccentBrush" Color="#4DA3FF"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#000000"/>
    
    <!-- 按钮别名 -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#606060"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#555555"/>
    
    <!-- 输入框别名 -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#202020"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#404040"/>
    
    <!-- 预览组件别名 -->
    <SolidColorBrush x:Key="PreviewTitleBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="PreviewTitleForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PreviewPanelBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="PreviewTextPrimaryBrush" Color="#FFFFFF"/>

    <!-- 状态色别名 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#E57373"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#64B5F6"/>

</ResourceDictionary>
