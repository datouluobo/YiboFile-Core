<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- ========================================
         主题元数据 (Theme Metadata)
         ======================================== -->
    <sys:String x:Key="ThemeId">Light</sys:String>
    <sys:String x:Key="ThemeDisplayName">浅色模式</sys:String>
    <sys:String x:Key="ThemeDescription">清新明亮的浅色主题，适合日间使用</sys:String>
    <sys:String x:Key="ThemeAuthor">YiboSoft</sys:String>
    <sys:String x:Key="ThemeVersion">2.0.0</sys:String>
    
    <!-- 预览色彩 (Preview Colors) -->
    <sys:String x:Key="PreviewPrimaryColor">#007BFF</sys:String>
    <sys:String x:Key="PreviewBackgroundColor">#FFFFFF</sys:String>
    <sys:String x:Key="PreviewSurfaceColor">#F8F9FA</sys:String>
    <sys:String x:Key="PreviewTextColor">#212529</sys:String>
    
    <!-- ========================================
         核心资源 (28个)
         ======================================== -->
    
    <!-- 1. 背景类 (4个) -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#FFFFFF"/>      <!-- 主背景 -->
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#F8F9FA"/>    <!-- 次背景/面板 -->
    <SolidColorBrush x:Key="NavigationRegionBrush" Color="#F2F2F2"/>       <!-- 导航区背景 (新增) -->
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#F5F5F5"/>     <!-- 三级背景/卡片 -->
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="#FFFFFF"/>     <!-- 对话框/浮动 -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#F8F9FA"/>     <!-- 标题栏背景 (与次背景一致) -->
    
    <!-- 2. 文本类 (4个) -->
    <Color x:Key="ForegroundPrimaryColor">#212529</Color>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#212529"/>      <!-- 主要文本 -->
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#666666"/>    <!-- 次要文本 -->
    <SolidColorBrush x:Key="ForegroundDisabledBrush" Color="#ADB5BD"/>     <!-- 禁用文本 -->
    <SolidColorBrush x:Key="ForegroundOnAccentBrush" Color="#FFFFFF"/>     <!-- 强调色上的文本 -->
    
    <!-- 3. 边框类 (3个) -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="#E0E0E0"/>          <!-- 默认边框 -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#F0F0F0"/>           <!-- 淡边框 -->
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#007BFF"/>            <!-- 聚焦边框 -->
    
    <!-- 4. 强调色/交互 (5个) -->
    <Color x:Key="AccentColor">#007BFF</Color>
    <Color x:Key="AccentHoverColor">#0056B3</Color>
    <SolidColorBrush x:Key="AccentDefaultBrush" Color="#007BFF"/>          <!-- 主强调色 -->
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#0056B3"/>            <!-- 悬停 -->
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#004085"/>          <!-- 按下 -->
    <SolidColorBrush x:Key="AccentSelectedBrush" Color="#64B5F6"/>         <!-- 选中 -->
    <SolidColorBrush x:Key="AccentLightBrush" Color="#E3F2FD"/>            <!-- 浅强调色背景 -->
    
    <!-- 5. 控件状态 (4个) -->
    <SolidColorBrush x:Key="ControlDefaultBrush" Color="#E3F2FD"/>         <!-- 控件默认 -->
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#BBDEFB"/>           <!-- 控件悬停 -->
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#90CAF9"/>         <!-- 控件按下 -->
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#F5F5F5"/>        <!-- 控件禁用 -->
    
    <!-- 6. 状态色 (4个) -->
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="#28A745"/>          <!-- 成功 -->
    <SolidColorBrush x:Key="StatusWarningBrush" Color="#FFC107"/>          <!-- 警告 -->
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#DC3545"/>            <!-- 错误 -->
    <SolidColorBrush x:Key="StatusInfoBrush" Color="#17A2B8"/>             <!-- 信息 -->
    
    <!-- 7. 特殊用途 (4个) -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>        <!-- 透明 -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#66000000"/>              <!-- 遮罩 -->
    <SolidColorBrush x:Key="OverlayLightBrush" Color="#33000000"/>         <!-- 浅遮罩 -->
    <SolidColorBrush x:Key="DisabledBrush" Color="#C0C0C0"/>               <!-- 通用禁用色 -->
    <SolidColorBrush x:Key="DividerBrush" Color="#E0E0E0"/>                <!-- 分隔线 -->
    <SolidColorBrush x:Key="ShadowBrush" Color="#1A000000"/>               <!-- 阴影 -->
    
    <!-- ========================================
         向后兼容别名
         ======================================== -->
    
    <!-- 背景别名 -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#FFFFFF"/>
    
    <!-- 文本别名 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212529"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#ADB5BD"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="#FFFFFF"/>
    
    <!-- 边框别名 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderStrongBrush" Color="#E0E0E0"/>
    
    <!-- 强调色别名 -->
    <SolidColorBrush x:Key="AccentBrush" Color="#007BFF"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFF"/>
    
    <!-- 按钮别名 -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#90CAF9"/>
    
    <!-- 输入框别名 -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#E0E0E0"/>
    
    <!-- 预览组件别名 -->
    <SolidColorBrush x:Key="PreviewTitleBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="PreviewTitleForegroundBrush" Color="#212529"/>
    <SolidColorBrush x:Key="PreviewPanelBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="PreviewTextPrimaryBrush" Color="#212529"/>

    <!-- 状态色别名 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#17A2B8"/>

</ResourceDictionary>
