<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- ========================================
         主题元数据 (Theme Metadata)
         ======================================== -->
    <sys:String x:Key="ThemeId">Nordic</sys:String>
    <sys:String x:Key="ThemeDisplayName">北欧灰</sys:String>
    <sys:String x:Key="ThemeDescription">简约现代的北欧灰主题，专业高效</sys:String>
    <sys:String x:Key="ThemeAuthor">YiboSoft</sys:String>
    <sys:String x:Key="ThemeVersion">1.0.0</sys:String>
    
    <!-- 预览色彩 (Preview Colors) -->
    <sys:String x:Key="PreviewPrimaryColor">#607D8B</sys:String>
    <sys:String x:Key="PreviewBackgroundColor">#FAFAFA</sys:String>
    <sys:String x:Key="PreviewSurfaceColor">#ECEFF1</sys:String>
    <sys:String x:Key="PreviewTextColor">#263238</sys:String>
    
    <!-- ========================================
         核心资源 (28个)
         ======================================== -->
    
    <!-- 1. 背景类 (4个) -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#FAFAFA"/>      <!-- 主背景 -->
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#ECEFF1"/>    <!-- 次背景/面板 -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#ECEFF1"/>     <!-- 标题栏背景 -->
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#CFD8DC"/>     <!-- 三级背景/卡片 -->
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="#FFFFFF"/>     <!-- 对话框/浮动 -->
    
    <!-- 2. 文本类 (4个) -->
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#263238"/>      <!-- 主要文本 -->
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#546E7A"/>    <!-- 次要文本 -->
    <SolidColorBrush x:Key="ForegroundDisabledBrush" Color="#90A4AE"/>     <!-- 禁用文本 -->
    <SolidColorBrush x:Key="ForegroundOnAccentBrush" Color="#FFFFFF"/>     <!-- 强调色上的文本 -->
    
    <!-- 3. 边框类 (3个) -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="#B0BEC5"/>          <!-- 默认边框 -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#CFD8DC"/>           <!-- 淡边框 -->
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#607D8B"/>            <!-- 聚焦边框 -->
    
    <!-- 4. 强调色/交互 (5个) -->
    <SolidColorBrush x:Key="AccentDefaultBrush" Color="#607D8B"/>          <!-- 主强调色 -->
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#546E7A"/>            <!-- 悬停 -->
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#455A64"/>          <!-- 按下 -->
    <SolidColorBrush x:Key="AccentSelectedBrush" Color="#78909C"/>         <!-- 选中 -->
    <SolidColorBrush x:Key="AccentLightBrush" Color="#ECEFF1"/>            <!-- 浅强调色背景 -->
    
    <!-- 5. 控件状态 (4个) -->
    <SolidColorBrush x:Key="ControlDefaultBrush" Color="#ECEFF1"/>         <!-- 控件默认 -->
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#CFD8DC"/>           <!-- 控件悬停 -->
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#B0BEC5"/>         <!-- 控件按下 -->
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#F5F5F5"/>        <!-- 控件禁用 -->
    
    <!-- 6. 状态色 (4个) -->
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="#28A745"/>          <!-- 成功 -->
    <SolidColorBrush x:Key="StatusWarningBrush" Color="#FFC107"/>          <!-- 警告 -->
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#DC3545"/>            <!-- 错误 -->
    <SolidColorBrush x:Key="StatusInfoBrush" Color="#607D8B"/>             <!-- 信息 -->
    
    <!-- 7. 特殊用途 (4个) -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>        <!-- 透明 -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#66000000"/>              <!-- 遮罩 -->
    <SolidColorBrush x:Key="OverlayLightBrush" Color="#33000000"/>         <!-- 浅遮罩 -->
    <SolidColorBrush x:Key="DisabledBrush" Color="#90A4AE"/>               <!-- 通用禁用色 -->
    
    <!-- ========================================
         向后兼容别名
         ======================================== -->
    
    <!-- 背景别名 -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#ECEFF1"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#CFD8DC"/>
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#FFFFFF"/>
    
    <!-- 文本别名 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#263238"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#546E7A"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#90A4AE"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="#FFFFFF"/>
    
    <!-- 边框别名 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#B0BEC5"/>
    <SolidColorBrush x:Key="BorderStrongBrush" Color="#B0BEC5"/>
    
    <!-- 强调色别名 -->
    <SolidColorBrush x:Key="AccentBrush" Color="#607D8B"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFF"/>
    
    <!-- 按钮别名 -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#ECEFF1"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#B0BEC5"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#CFD8DC"/>
    
    <!-- 输入框别名 -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#B0BEC5"/>
    
    <!-- 预览组件别名 -->
    <SolidColorBrush x:Key="PreviewTitleBackgroundBrush" Color="#ECEFF1"/>
    <SolidColorBrush x:Key="PreviewTitleForegroundBrush" Color="#263238"/>
    <SolidColorBrush x:Key="PreviewPanelBackgroundBrush" Color="#ECEFF1"/>
    <SolidColorBrush x:Key="PreviewTextPrimaryBrush" Color="#263238"/>

    <!-- 状态色别名 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#607D8B"/>

</ResourceDictionary>
