<Window x:Class="YiboFile.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="确认" 
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <!-- 基础按钮样式 -->
        <Style x:Key="LocalButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.75"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="12" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1"
            Margin="20"
            MinWidth="320"
            MaxWidth="450">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.15" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题区域 -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           x:Name="IconTextBlock" 
                           FontSize="24"
                           Text="ℹ️"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="ConfirmTitle" 
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#333333"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </Grid>
            
            <!-- 消息内容 -->
            <TextBlock Grid.Row="1" 
                       x:Name="MessageTextBlock" 
                       FontSize="14"
                       Foreground="#666666"
                       TextWrapping="Wrap"
                       LineHeight="20"
                       Margin="0,0,0,24"/>
            
            <!-- 按钮 -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="取消" 
                        x:Name="CancelButton"
                        Click="Cancel_Click" 
                        Background="#F5F5F5"
                        Foreground="#333333"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Style="{StaticResource LocalButtonStyle}"/>
                
                <Button x:Name="ConfirmButton"
                        Content="确定" 
                        Click="Confirm_Click" 
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Style="{StaticResource LocalButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
